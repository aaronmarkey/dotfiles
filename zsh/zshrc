# zsh setup
export ZSH=$HOME/.oh-my-zsh
plugins=(
  git
  thefuck
  sublime
  zsh-syntax-highlighting
)
source $ZSH/oh-my-zsh.sh


# basic options
export CLICOLOR=1


# aliases
source ~/.aliases
source ~/.aliases-os


# functions
source ~/.functions


# paths
source ~/.paths


# pure prompt init.
autoload -U promptinit; promptinit
prompt pure


# the fuck?
eval $(thefuck --alias)


# direnv
eval "$(direnv hook zsh)"

# pyenv
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# OpenSSL
export PATH="/usr/local/opt/openssl/bin:$PATH"


# optional sources
work="$HOME/.work"
if [ -f "$work" ]
then
	source $work
fi
