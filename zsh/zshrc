# zsh setup
export ZSH=$HOME/.oh-my-zsh


# plugins
# install highlighting: git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
plugins=(
  colored-man-pages
  git
  sublime
  zsh-syntax-highlighting
)
source $ZSH/oh-my-zsh.sh


# basic options
export CLICOLOR=1

# prompt
eval "$(starship init zsh)"


# aliases
source ~/.aliases
source ~/.aliases-os


# functions
source ~/.functions


# paths
source ~/.paths


# direnv
eval "$(direnv hook zsh)"


# pyenv
export PATH="$HOME/.pyenv/bin:$PATH"
export PYENV_VIRTUALENV_DISABLE_PROMPT=1
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"


# OpenSSL
export PATH="/usr/local/opt/openssl/bin:$PATH"


# Additional Custom Configs
unsetopt nomatch
foreach file (`echo ~/.zshrc-*`)
    if [[ -a $file ]]; then
        source $file
    fi
end
setopt nomatch
